<% action_url = method == :login ? session_url : users_url %>
<% submit_text = method == :login ? "Login" : "Sign Up" %>

<form class='login_form' action="<%= action_url %>" method="post">
  <%= auth_token %>
  
  <input type="text" name="user[email]" id="email_field" placeholder="Email">
  <input type="password" name="user[password]" id="password_field" placeholder="Password">
  <input type="submit" value="<%= submit_text %>">
</form>