<h1><%= @album.title %></h1>
<h2>Album Information</h2>
<table class="album_page_table">
  <th>Band</th>
  <th>Title</th>
  <th>Year</th>
  <th>No. of Tracks</th>
  <tr>
    <% @album_attributes.each do |attr_val| %>
      <td><p><%= attr_val %></p></td>
    <% end %>
  </tr>
</table>
<h2>Track list</h2>
<ul>
  <% @album.tracks.each do |track| %>
      <li><%= link_to(track.title, track_url(track)) %></li>
    <% end %>
</ul>
<div class="page_links">
  <%= button_to("Add Track", new_album_track_url(@album), method: :get) %>
  <%= button_to("Edit Album", edit_album_url(@album), method: :get) %>
  <%= button_to("Delete Album", album_url(@album), method: :delete) %>
  <%= button_to("Go to Band Page", band_url(@album.band), method: :get) %>
</div>