<h1>Album List</h1>

<table class="band_album_list">
  <th>Title</th>
  <th>Year</th>
  <th>Band</th>
  <th>Type</th>
  <% @albums.each do |album| %>
  <tr>
    <td><%= link_to(album.title, album_url(album)) %></td>
    <td><p><%= album.year %></p></td>
    <td><p><%= album.band.name %></p></td>
    <td><p><%= album.studio? %></p></td>
  </tr>
  <% end %>
</table>

<%= button_to("Add a New Band", new_band_url, method: :get) %>
