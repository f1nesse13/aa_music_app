<!DOCTYPE html>
<html>
  <head>
    <title>AaMusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
  <h1>Music App</h1>
  <% if logged_in? %>
    <%= current_user['email'] %> is logged in.
    <%= button_to("Logout", session_url, method: :delete) %>
  <% else %>
    <%= button_to("Login", new_session_url, method: :get) %> <p> OR </p>
    <%= button_to("Sign Up", new_user_url, method: :get) %>
  <% end %>
  </header>
  <body>

    <%= yield %>
  </body>
</html>
